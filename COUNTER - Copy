#include <lpc214x.h>
void delay(unsigned int count);
int main()
{
	IODIR0 |=(1 << 2);
	IODIR0 |=(1 << 4);
	IODIR0 |=(1 << 6);
	
	while(1){
		delay(30000); //0 0 0
		IOSET0 |=(1<<2); //0 0 1
		delay(30000);
		IOCLR0 |=(1<<2);
		IOSET0 |=(1<<4); //0 1 0
		delay(30000);
		IOCLR0 |=(1<<4);
		IOSET0 |=(1<<4); //0 1 1
		IOSET0 |=(1<<2);
		delay(30000);
		IOCLR0 |=(1<<2);
		IOCLR0 |=(1<<4);
		IOSET0 |=(1<<6); //1 0 0
		delay(30000);
		IOCLR0 |=(1<<6);
		IOSET0 |=(1<<6); //1 0 1
		IOSET0 |=(1<<2);
		delay(30000);
		IOCLR0 |=(1<<2);
		IOCLR0 |=(1<<6);
		IOSET0 |=(1<<6);//1 1 0
		IOSET0 |=(1<<4);
		delay(30000);
		IOCLR0 |=(1<<4);
		IOCLR0 |=(1<<6);
		IOSET0 |=(1<<6);// 1 1 1
		IOSET0 |=(1<<4);
		IOSET0 |=(1<<2);
		delay(30000);
		IOCLR0 |=(1<<2);
		IOCLR0 |=(1<<4);
		IOCLR0 |=(1<<6);
	}
}
void delay(unsigned int count)
{
	unsigned int i;
	for(i=0;i<count;i++);
}

